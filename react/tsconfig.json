{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "jsx": "react",
    "noEmitOnError": false,
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "jest", "graphql"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "lib": ["dom", "es2017"],
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["./typings/*.d.ts", "./**/*.tsx", "./**/*.ts", "./**/*"],
  "exclude": ["node_modules"]
}
